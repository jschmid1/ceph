# allow cephadm user to sudo cephadm
cephadm ALL=NOPASSWD: /usr/sbin/cephadm --image * ls
cephadm ALL=NOPASSWD: /usr/sbin/cephadm --image * unit *
cephadm ALL=NOPASSWD: /usr/sbin/cephadm --image * shell *
cephadm ALL=NOPASSWD: /usr/sbin/cephadm --image * deploy *
cephadm ALL=NOPASSWD: /usr/sbin/cephadm --image * ceph-volume *
cephadm ALL=NOPASSWD: /usr/sbin/cephadm --image * rm-daemon *
